ion-view(hide-nav-bar="true" id="places")
  div(class="bar bar-positive bar-header item-input-inset")
    button.button.button-clear(ng-click="openModal()") Filter&nbsp&nbsp
    label(class="item-input-wrapper")
      i(class="icon ion-ios7-search placeholder-icon")
      //- input(id="searchQuery" class="google-place-search" type="search" ng-model="searchQuery" placeholder="Enter an address, place or ZIP code")
      ng-places(placeholder="Enter an address, Apt# and ZIP" ng-model="location")

    a.button.button-clear(href="#/tab/menus/map") Map


  ion-content(class="has-header has-header")
    ion-list

      ion-item.item-avatar(ng-repeat="location in vm.locations" type="item-text-wrap" ng-click="vm.selectLocation(vm.location)")
        img(ng-src="{{location.photos[0].getUrl({'maxWidth': 65, 'maxHeight': 65})}}")
        h2 {{location.name}}



