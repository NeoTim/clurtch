ion-view(title="Login")
  ion-content
    .row
      .col-6
        img#userPic
      .col-6#userName
    .row.
      {{ login.status }}
    .row
      button.button.button-block.positive(ng-click="login.signupModal.show()") Sign-Up with Plateful
    .row
      button.button.button-block.positive(ng-click="login.loginModal.show()") Login with Plateful
    .row
      button.button.button-block.button-facebook-style(ng-click="login.fbLoginFlow()" ng-show="login.fbStatus!=='connected'") Login with Facebook
    .row
      button.button.button-block.button-facebook-style(ng-click="login.fbLogout()" ng-show="login.fbStatus==='connected'") Logout from Facebook
    .row
      button.button.button-block.assertive(ng-click="login.nativeLogout()" ng-show="login.isSignedIn") Logout
